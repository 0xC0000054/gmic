#!/usr/bin/gmic
# File : distortion.gmic
# Author : David Tschumperle

go :
  nbf=50
  sample cat
  repeat $nbf
    +f[0] "const boundary = 3;
           const interpolation = 1;
           j( w/16*cos(2*pi*"$>/$nbf" + 0.5*sin(y/50)),
              h/16*sin(2*pi*"$>/$nbf" + 0.5*cos(x/30)))"
  done
  remove[0]

cli_start : go nm Distortion animate 50

# End of file.
