# File : lissajous.gmic

go :
  100,1,1,3 rand 0,255
  repeat 60
    (0^0^0;64) r. 300,300,1,3,3
    eval ${-math_lib}"
      const boundary = 2;
      const f = "$>"*0.03;
      const dt = "$>"*0.005;
      for (t = b = 0, t<3*pi, t+=0.05,
        nt = t + dt;
        x = w/2 + 4*w/9*cos((3.2+0.7*f)*nt);
        y = h/2 + 4*h/9*sin((2.1-0.3*f)*nt);
        draw_circle(#-1,[x,y],8,0.4,I[#0,b++]);
      );
    "
    wait 20
  done rm[0]

